{
	"compilerOptions": {
		"lib": ["es2017"],
		"target": "es6",
		"module": "commonjs",
		"baseUrl": ".",
		"outDir": "./dist/",
		"allowJs": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"noImplicitAny": true,
		"paths": {
			"*": ["node_modules/*"]
		},
		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": ["src"]
}
