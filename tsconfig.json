{
	"compilerOptions": {
		"lib": ["es2017"],
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"allowJs": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": ["./src"]
}
